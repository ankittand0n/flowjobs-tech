{
  "name": "extension",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/extension/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/extension",
        "main": "apps/extension/src/popup.tsx",
        "tsConfig": "apps/extension/tsconfig.json",
        "assets": ["apps/extension/src/assets"]
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "extension:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "extension:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "extension:build:production",
          "hmr": false
        }
      }
    }
  },
  "tags": []
} 